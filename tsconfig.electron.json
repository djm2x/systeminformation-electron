{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", // <-- Note that we're making electron parallel to the app.
    "sourceMap": false,
    "module": "commonjs",
    "types": [
      "node"
    ] // <-- We need the "node" type for typescript.
  },
  "baseUrl": "./",
  "include": [
    "index.ts", // <-- This is the only file included.
    "api/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
